<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mostviwed_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/paggoda" />

        <TextView
            android:id="@+id/mostviwed_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tri Puri Agung"
            android:layout_toRightOf="@id/mostviwed_image"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:lineHeight="20dp"
            android:fontFamily="@font/baloo"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/mostviwed_image" />

        <RatingBar
            android:id="@+id/mostviwed_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_below="@id/mostviwed_title"
            android:layout_toRightOf="@id/mostviwed_image"
            android:layout_marginLeft="10dp"
            android:rating="4"/>

        <TextView
            android:id="@+id/mostviwed_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mostviwed_rating"
            android:layout_toRightOf="@id/mostviwed_image"
            android:padding="10dp"
            android:text="Lokasi ini paling banyak di lihat dan dikunjungi oleh pengguna." />


    </RelativeLayout>

</androidx.cardview.widget.CardView>